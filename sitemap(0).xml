<!DOCTYPE html>
<html>
  <head>
    <title>Google XML Sitemap Generator</title>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- Cascading Style Sheets -->
    <link href="cssmap/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link rel="stylesheet" href="cssmap/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="cssmap/custom.css" />
	<!--[if IE 7]>
	<link rel="stylesheet" href="css/font-awesome-ie7.min.css">
	<![endif]-->
	<!-- /Cascading Style Sheets -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="ffee9565a5d8563d9caae3f6-text/javascript"></script>
	<script type="ffee9565a5d8563d9caae3f6-text/javascript">
	
		$(document).ready(function(){
			$("#formSubmit").submit(function() {
				$.ajax({
					type: "POST",
					url: "ajaxmap.php",
					data: $("#formSubmit").serialize(),
					beforeSend: function(XMLHttpRequest){
						var overlay = $('<div id="overlay"></div>');
						overlay.appendTo(document.body);
						$("#loading").css('display','inline');
						$('#results').empty();	
					}, 
					success: function(data){						
						$("#loading").css('display','none');
						$('#results').append(data);						
						$("#overlay").remove();
						$('html, body').animate({scrollTop: $("#results").offset().top}, 300);			
					}
				});
	
				return false;
			});
			
		});	

	</script>	
  </head>
  <body>
  <!-- Main Content -->
  <div class="content">
    <div class="container">
      <div class="logo">
      </div>
      <h1>Google XML Sitemap Generator</h1>

    </div>

    <div class="subscribe">
	<form id="formSubmit" class="form-wrapper" action="ajaxmap.php" method="post">
		<input class="form-control" type="text" id="search" name="url" placeholder="Enter Website URL..." required>
		<select class="input-sm" name="frequency" id="select">
		<optgroup label="Change Frequency">
			<option value="always">Always</option>			
			<option value="hourly">Hourly</option>			
			<option value="daily">Daily</option>			
			<option value="weekly" selected="selected">Weekly</option>
			<option value="monthly">Monthly</option>			
			<option value="yearly">Yearly</option>			
			<option value="never">Never</option>
		</optgroup>
		</select>
        <br><br><br>
		<input class="btn btn-primary" type="submit" value="Generate" id="submit">
	</form>
	<br /><br /><br />
	<div style="display:none;" id="loading" align="center">
		<h3><strong>Please wait the data is loading...</strong></h3>
	</div>
	<div id="results"></div>
    </div>

  </div>
  <!-- /Main Content -->


